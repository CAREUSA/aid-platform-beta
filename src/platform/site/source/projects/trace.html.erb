</style>
  <script type="text/javascript">             

            (function(){
          
    //JSON object with the data
      /* var treeData = {"id" : "A", "info" : "tst", "children" : [
            {"id" : "A1" },
            {"id" : "A2" },
            {"id" : "A3", "children": [
